<androidx.core.widget.NestedScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="248dp"
            android:background="@color/darkblue"
            android:orientation="vertical"
            android:padding="50dp"

            tools:ignore="MissingConstraints">

            <TextView
                style="@android:style/Widget.TextView.PopupMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login to WiseBridge"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="40sp"
                android:textStyle="bold" />
            <TextView
                style="@android:style/Widget.TextView.PopupMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unlocking Possibilities"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="20sp" />




        </LinearLayout>

        <LinearLayout
            android:id="@+id/logbtn"
            android:layout_width="match_parent"
            android:layout_height="558dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#fff"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/userTypeSpinner"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:entries="@array/user_types" />


            <EditText

                android:id="@+id/Rusername"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:drawableLeft="@drawable/ic_lightbulb_outline_black_24dp"
                android:drawablePadding="10dp"
                android:hint="Username" />

            <EditText
                android:id="@+id/Rpassword"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/ic_security_black_24dp"
                android:drawablePadding="10dp"
                android:hint="Password"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/Registerbtn"
                android:layout_width="300dp"
                android:layout_height="64dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/edittextstyle"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="Log in"
                android:textColor="#fff" />


            <TextView
                android:id="@+id/forgotpass"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:paddingTop="20dp"
                android:text="forgot passoword?"
                android:textAlignment="center"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/signup"
                android:layout_width="362dp"
                android:layout_height="wrap_content"
                android:state_hovered="true"
                android:text="New user? Create an account!"
                android:textAlignment="center"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>

