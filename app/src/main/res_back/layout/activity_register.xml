<androidx.core.widget.NestedScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="248dp"
            android:background="@color/darkblue"
            android:orientation="vertical"
            android:padding="50dp"
            tools:ignore="MissingConstraints">

            <TextView
                style="@android:style/Widget.TextView.PopupMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register to WiseBridge"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="40sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/logbtn"
            android:layout_width="match_parent"
            android:layout_height="558dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#fff"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/userTypeSpinnerreg"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:entries="@array/user_types_reg" />

            <EditText
                android:id="@+id/Rusername"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/u1"
                android:drawablePadding="10dp"
                android:hint="Username" />

            <EditText
                android:id="@+id/REmail"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/m1"
                android:drawablePadding="10dp"
                android:hint="Email" />

            <EditText
                android:id="@+id/Rpassword"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/ic_security_black_24dp"
                android:drawablePadding="10dp"
                android:hint="Password"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/Ruid"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/i2"
                android:drawablePadding="10dp"
                android:hint="Uwindsor id" />

            <Button
                android:id="@+id/Registerbtn"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/edittextstyle"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="REGISTER"
                android:textColor="#fff" />

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
